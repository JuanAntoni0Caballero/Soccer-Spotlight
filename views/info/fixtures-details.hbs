<div class="container">

    <div class="row justify-content-center">

        <div>
            <h1>Matche details</h1>

        </div>


        <div class="col-md-6">

            <h1>New Comment</h1>
            <hr>


            <form action="/matches/create" method="POST">

                <div class="mb-6">
                    <label for="comment" class="form-label">Comment</label>
                    <input type="text" class="form-control" id="comment" name="comment" value="{{comment}}">
                </div>

                <div class="d-grid mt-2">
                    <button type="submit" class="btn btn-dark btn-lg">Create comment</button>
                </div>

            </form>

        </div>

        <div>

            <h1>Comments!</h1>
            {{#each comments}}
            <div class="card">
                <div class="card-header">
                    Usuario: {{owner.username}}
                </div>
                <div class="card-body">
                    <h5 class="card-title">{{comment}}</h5>
                </div>
            </div>

            {{/each}}

        </div>
    </div>

    <hr>

    <a href="/" class="btn btn-dark">Back to start</a>
</div>