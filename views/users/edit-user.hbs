<div class="container mt-3">
    <h1>Edit personal information:</h1>
    <hr>

    <div class="row justify-content-center">
        <div class="col-md-8">

            <form action="/users/profile/edit" method="post" enctype="multipart/form-data">
                <div class="row justify-content-between">

                    <div class="col-12 mb-2">
                        <label for="email" class="form-label">E-mail</label>
                        <input type="email" class="form-control" id="email" name="email" value="{{user.email}}">
                    </div>
                    <div class="col-6 mb-2">
                        <label for="username" class="form-label">Username</label>
                        <input type="string" class="form-control" id="username" name="username"
                            value="{{user.username}}">
                    </div>
                    <div class="col-6 mb-2">
                        <label for="birthday" class="form-label">Birthday</label>
                        <input type="date" class="form-control" id="birthday" name="birthday" value="{{user.birthday}}">
                    </div>
                    <div class="col-12 mb-2">
                        <label for="avatar" class="form-label">Profile picture</label>
                        <input type="file" class="form-control" id="avatar" name="avatar">
                    </div>
                    {{#if errorMessage}}
                    <p id="errorMessage" class="mt-2">{{errorMessage}}</p>
                    {{/if}}
                    <div class=" d-grid gap-2 col-12 mt-2">
                        <input type="submit" value="Save changes" class="btn btn-success">
                    </div>

                </div>

            </form>

        </div>
    </div>

</div>