<div class="container mt-3">

    <div class="row g-0">
        <div class="col-md-4 p-5">
            <div id="userImg">
                <img class="rounded-circle object-fit-cover userImg " src="{{user.avatar}}" alt="{{user.username}}">
            </div>
        </div>
        <div class="col-md-8 p-5">
            <div class="card-body">
                <h2 class="card-title">{{user.username}}</h2>
                <hr>
                <p class="card-text">Email: {{user.email}}</p>
                <p class="card-text">Birthday: {{user.birthday}}</p>
                <hr>
                <p>Friends:</p>

                <div class="row">
                    {{#each user.friends}}

                    <div class="col-2 text-center">
                        <p class="card-text mb-2"> {{this.username}}</p>
                        <img class="rounded-circle object-fit-cover userImg" src="{{this.avatar}}"
                            alt="{{this.username}}">
                    </div>

                    {{/each}}
                </div>

