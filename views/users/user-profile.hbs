<div class="container mt-3">

    <div class="row g-0">
        <div class="col-md-4 p-5">
            <div id="userImg">
                <img class="rounded-circle object-fit-cover userImg " src="{{user.avatar}}" alt="{{user.username}}">
            </div>
        </div>
        <div class="col-md-8 p-5">
            <div class="card-body">
                <h2 class="card-title">Hello: {{user.username}}</h2>
                <hr>
                <p class="card-text">Email: {{user.email}}</p>
                <p class="card-text">Birthday: {{user.birthday}}</p>

                <h6 class="fw-bold my-3">Friends:</h6>

                <div class="row">
                    {{#each user.friends}}

                    <div class="col-2">
                        <p class="card-text"> {{username}}</p>
                        <img class="rounded-circle object-fit-cover userImg" src="{{avatar}}" alt="{{username}}">

                        <form action="/users/profile/{{_id}}/deletFriend" method="post">
                            <button type="submit" class="btn btn-danger mt-2 btn-sm">Delete</button>
                        </form>
                    </div>

                    {{/each}}

                </div>

                <h6 class="fw-bold my-3">Favorite teams:</h6>

                <div class="row d-flex">
                    {{#each myTeams}}

                    <div class="col-2">
                        <p class="card-text"> {{team.name}}</p>
                        <img class="object-fit-cover userImg" src="{{team.logo}}" alt="{{team.name}}">

                        <form action="/users/profile/{{team.id}}/deletTeam" method="post">
                            <button type="submit" class="btn btn-danger mt-2 btn-sm">Delete</button>
                        </form>
                    </div>

                    {{/each}}

                </div>

            </div>
        </div>
    </div>

    <div class="d-grid justify-content-center mt-3">

        <a href="/users/profile/edit" class="btn btn-warning">Edit information</a>

    </div>


</div>