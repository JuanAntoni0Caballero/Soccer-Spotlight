<div class="container mt-3">

    <div class="row g-0">
        <div class="col-md-4 p-5">
            <div id="userImg">
                <img class="rounded-circle object-fit-cover userImg " src="{{avatar}}" alt="{{username}}">
            </div>
        </div>
        <div class="col-md-8 p-5">
            <div class="card-body">
                <h2 class="card-title">Hello: {{username}}</h2>
                <hr>
                <p class="card-text">Email: {{email}}</p>
                <p class="card-text">Birthday: {{birthday}}</p>
                <hr>
                <p>Friends:</p>

                <div class="row">
                    {{#each friends}}


                    <div class="col-2">
                        <p class="card-text"> {{username}}</p>

                    </div>
                    <div class="col-2">

                        <img class="rounded-circle object-fit-cover userImg" src="{{avatar}}" alt="{{username}}">

                    </div>
                    <form action="/users/profile/{{_id}}/deletFriend" method="post">
                        <button type="submit" class="btn btn-search mb-2"> Delet friend</button>
                    </form>

                    {{/each}}

                </div>

            </div>
        </div>
    </div>

    <div class="d-grid justify-content-center mt-3">

        <a href="/users/profile/edit" class="btn btn-warning">Edit information</a>

    </div>


</div>